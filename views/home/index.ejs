<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs') %>
</head>
<body>

    <!-- {title:'CONNECT FOUR', lnk:'ConnectFour'}, -->
    <!-- {title:'PUZZLE', lnk:''} -->
    <% const games = [{title:'SPACE INVADER', lnk:'SpaceInvader'}, {title:'TETRIS', lnk:'Tetris'}, {title:'THE SNAKE', lnk:'TheSnake'}, {title:'MEMORY GAME', lnk:'MemoryGame'}, {title:'DEATH RACE', lnk:'DeathRace'},  {title:'WACKMOLE', lnk:'WackMole'}] %> 

    <h1>Legacy Games</h1>
    <div class="home-menu">
        <% games.forEach(game => { %> 
        <a href=<%= `/${game.lnk}` %>  class="home-menu_link">
            <div class='home-menu_item'>
                <img src=<%=`/home-images/${game.lnk}.jpg` %> alt="" class="home-menu_image">
                <p class="home-menu_title"><%= game.title %> </p>
            </div>
        </a>
        <% }) %> 
    </div>
</body>
</html>